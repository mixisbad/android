<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.task_schedular"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.task_schedular.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.task_schedular.ProjectList"
            android:label="@string/title_activity_project_list" >
        </activity>
        <activity
            android:name="com.example.task_schedular.TaskListActivity"
            android:label="@string/title_task_list" >
        </activity>
        <activity
            android:name="com.example.task_schedular.TaskDetailActivity"
            android:label="@string/title_task_detail"
            android:parentActivityName=".TaskListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TaskListActivity" />
        </activity>
        <activity
            android:name="com.example.task_schedular.UpdateActivity"
            android:label="@string/title_activity_update" >
        </activity>
        <activity
            android:name="com.example.task_schedular.MemberActivity"
            android:label="@string/title_activity_member" >
        </activity>
        <activity
            android:name="com.example.task_schedular.UserInfoActivity"
            android:label="@string/title_activity_user_info" >
        </activity>
    </application>

</manifest>